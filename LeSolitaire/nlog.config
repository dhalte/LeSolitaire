<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" autoReload="true">
  <targets>
    <target xsi:type="File" name="file"
layout="${longdate}|${level:uppercase=true}|${logger}|${message}${exception:format=ToString}"
fileName="log\LeSolitaire.log" encoding="utf-8" archiveAboveSize="1000000"
maxArchiveFiles="30" archiveFileName="${basedir}/log/LeSolitaire ${shortdate}.log" archiveNumbering="Date" archiveDateFormat="yyyy-MM-dd" archiveEvery="Day" archiveOldFileOnStartup="false"
    />
    <target xsi:type="Debugger" name="dbg" layout="${time}|${level:uppercase=true}|${logger}|${message}${exception:format=ToString}"/>
  </targets>
  <rules>
    <logger name="*" minlevel="Debug" writeTo="file,dbg" />
  </rules>
</nlog>